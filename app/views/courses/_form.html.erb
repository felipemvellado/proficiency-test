<%= simple_form_for @course do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html:
      { maxlength: 45, autofocus: true, class: "form-control", tabindex: 1 } %>
  </div>

  <div class="form-group">
    <%= f.input :description, input_html:
      { maxlength: 45, class: "form-control", tabindex: 2 } %>
  </div>

  <div class="form-group">
    <%= f.input :status do %>
      <%= f.select :status,
      Course.statuses.keys.to_a.
      map { |s| [t("activerecord.attributes.course.#{s}"), s] },
      { tabindex: 3 }, { :class => "form-control" } %>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to t("simple_form.forms.defaults.back"), :back,
      class: "btn btn-link" %>
    <%= f.button :submit, t("simple_form.forms.defaults.save"),
      class: "btn btn-primary btn-lg", tabindex: 4 %>
  </div>
<% end %>
