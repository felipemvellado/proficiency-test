<%= simple_form_for @course do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html:
      { maxlength: 45, autofocus: true, class: "form-control", tabindex: 1 } %>
  </div>

  <div class="form-group">
    <%= f.input :description, input_html:
      { maxlength: 45, class: "form-control", tabindex: 2 } %>
  </div>

  <div class="form-group">
    <%= f.input :status do %>
      <%= f.select :status,
      Course.statuses.keys.to_a.map { |s| [s.humanize, s] },
      { tabindex: 3 }, { :class => "form-control" } %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary btn-lg btn-block",
      tabindex: 4 %>
  </div>
<% end %>
