<div class="col-md-16">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= link_to t("simple_form.forms.student.links"), students_path,
          :class => "btn btn-default btn-lg" %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2><%= t("simple_form.forms.course.links") %></h2>
    </div>

    <div class="panel-body">
      <% if @courses.any? %>
        <%= render @courses %>
      <% else %>
        <p><% t("simple_form.forms.course.links") %></p>
      <% end %>
    </div>
  </div>
</div>
