<div class="col-md-16">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= link_to "Courses", courses_path,
          :class => "btn btn-default btn-lg" %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Students</h2>
    </div>

    <div class="panel-body">
      <% if @students.any? %>
        <%= render @students %>
      <% else %>
        <div class="jumbotron">
          <h2>You have no students yet. :(</h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
